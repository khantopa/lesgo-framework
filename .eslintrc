{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": ["eslint:recommended", "plugin:prettier/recommended"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "strict": ["error", "never"],
    "lines-around-directive": [
      "error",
      { "before": "always", "after": "always" }
    ]
  }
}
